<mashups>
		
	<mashup description="Translate Bar Code to Product Details" endpoint="EP_CONFIG"
		id="store.views.shipment.backroom-pick.registerBarcodeForBackroomPick" mashuptype="XAPI" transactional="true">
		<classInformation name="com.ibm.wsc.common.mashups.WSCBaseMashup" />
		<API FlowName="registerBarcodeForBackroomPick">		
			<Input>
				 <BarCode BarCodeData="" BarCodeType="Item" DisplayLocalizedFieldInLocale="xml:CurrentUser:/User/@Localecode">
                    <ContextualInfo
                        EnterpriseCode="xml:CurrentStore:/Store/@EnterpriseCode" OrganizationCode="xml:CurrentStore:/Store/@EnterpriseCode"/>
                    <ShipmentContextualInfo
                        SellerOrganizationCode="xml:CurrentStore:/Store/@EnterpriseCode"
                        ShipNode="xml:CurrentStore:/Store/@ShipNode"
                        ShipmentKey="" ShipmentNo=""/>
                </BarCode>
			</Input>
			<Template>
				 <BarCode BarCodeData="" BarCodeType="">
                    <Translations BarCodeTranslationSource="" TotalNumberOfRecords="">
                        <Translation>
                            <ContextualInfo BuyerOrganizationCode=""
                                EnterpriseCode="" OrganizationCode="" SellerOrganizationCode=""/>
                            <ItemContextualInfo AlternateUOM=""
                                InventoryUOM="" ItemID="" KitCode=""
                                ProductClass="" Quantity=""/>
							<ShipmentContextualInfo SellerOrganizationCode="" ShipNode="" ShipmentKey="" 
								ShipmentLineKey="" ShipmentNo=""/>
                        </Translation>                        
                    </Translations>
					<Shipment ShipmentKey="" >						
						<ShipmentLine   BackroomPickComplete=""
                        BackroomPickedQuantity="" ItemID=""
                        OrderHeaderKey="" OrderLineKey="" OrderNo=""
                        PickLocation="" OriginalQuantity="" Quantity="" ShipmentKey=""
                        ShipmentLineKey="" ShipmentLineNo=""
                        ShipmentSubLineNo="" ShortageQty="" UnitOfMeasure="">
							<OrderLine IsBundleParent="" ItemGroupCode="">
								<ItemDetails ItemGroupCode="" ItemID="" UnitOfMeasure="">
									<PrimaryInformation
										ExtendedDisplayDescription=""
										ImageID="" ImageLabel="" ImageLocation=""/>
									<ClassificationCodes Model=""/>
								</ItemDetails>
							</OrderLine>
						</ShipmentLine>
					</Shipment>
                </BarCode>
			</Template>
		</API>
		<AdditionalDataProviders>
			<AdditionalDataProvider class="com.ibm.wsc.core.dataproviders.WSCUnitOfMeasureDisplayProvider">
				<InterestedIn>
					<Element path="/BarCode/Shipment/ShipmentLine/OrderLine/ItemDetails" />
				</InterestedIn>
				<NewAttributes>
					<Attribute name="DisplayUnitOfMeasure" />
				</NewAttributes>
			</AdditionalDataProvider>
		</AdditionalDataProviders>
		<APINamespace inputNS="store.views.shipment.backroom-pick.registerBarcodeForBackroomPick_input"
			outputNS="store.views.shipment.backroom-pick.registerBarcodeForBackroomPick_output" />
		<AlternateResourceIds>
			<AlternateResourceId altResourceId="WSC000057"/>
			<AlternateResourceId altResourceId="WSC000058"/>
		</AlternateResourceIds>
	</mashup>
	
</mashups>
